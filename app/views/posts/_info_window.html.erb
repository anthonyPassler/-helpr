<%= link_to post_path(post), class: "links" do %>
  <div>
    <% if  post.user.photo.attached? %>
      <%= cl_image_tag post.user.photo.key,height: 40, :quality=>60, crop: :mfit, class: "avatar", alt: "profile image"  %>
    <% else %>
      <%= cl_image_tag("fpatfvf9edoaaqhbkfrt",
            width: 20, crop: :fill, class: "avatar", alt: "profile image")  %>
    <% end %>
  </div>
  <div>
    <h3><%= post.title %></h3>
    <p><%= post.content %></p>
  </div>
<% end %>
