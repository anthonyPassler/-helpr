<div class="container mt-4 mb-4">
  <div class="row justify-content-center w-100 mb-3 mt-3">
    <div class="col-5">
      <br>
      <div style="text-align: center;">
      <h2>Log in</h2>
      </div>
      <br>


      <div style="text-align: center; margin-top: 20px; margin-bottom: 20px;">
        <a class="loginBtn loginBtn--facebook justify" target="blank", href="https://www.facebook.com">
          Login with Facebook
        </a>

        <a class="loginBtn loginBtn--google justify", href="hhttps://www.google.co.uk/?client=safari&channel=mac_bm">
          Login with Google
        </a>
      </div>

      <div style="margin-top: 35px; margin-bottom: 35px; width: 99%; height: 14px; border-bottom: 1px solid grey; text-align: center">
        <span style="font-size: 15px; color: grey; background-color: #F3F5F6; padding: 0 5px;">
          OR
        </span>
      </div>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">

        <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

        </div>

        <div class="form-actions">
         <%= f.button :submit, "Log in", class: "btn-primary" %>
        </div>
          <% end %>
          <br>
          <%= render "devise/shared/links" %>
          <br>
          <br>
          <br>
        </div>
      </div>
    </div>
